extends ../layouts/mainLayout.pug

block append styles     
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block content 
    main 
        if errorMsg 
            .user-message.user-message--error #{errorMsg}
        form.login-form(action="/sign-up", method = "POST")
            input(type="hidden", name="_csrf", value = `${csrfToken}`)
            .form-control 
                label(for="email") Username 
                input#email(type="text", name="uname", value = `${oldInput.uname}`, class = `${validationErrors.find(err => err.path === 'uname') ? 'invalid' : ''}`)
            .form-control 
                label(for="email") Email 
                input#email(type="email", name="email", value = `${oldInput.email}`, class = `${validationErrors.find(err => err.path === 'email') ? 'invalid' : ''}`)
            .form-control 
                label(for="password") Password 
                input#password(type="password", name="password", value = `${oldInput.password}`, class = `${validationErrors.find(err => err.path === 'password') ? 'invalid' : ''}`)
            .form-control 
                label(for="repassword") Confirm Password 
                input#password(type="password", name="repassword", value = `${oldInput.repassword}`, class = `${validationErrors.find(err => err.path === 'repassword') ? 'invalid' : ''}`)
            button.btn(type="submit") Sign Up

